<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="<%= root_path %>">Flipkart</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse mx-5" id="navbarSupportedContent">
        <%= form_tag(products_path, method: :get) do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search" %>
        <%= submit_tag "Search", class: "btn btn-outline-primary " %>
    <% end %>
  </div>
    <% if user_signed_in? %>
      <h5 style="color:green"><%= current_user.email %></h5>
      <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link btn btn-outline-info rounded-5 mx-2' %>
      <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'navbar-link btn btn-outline-danger rounded-0', data: { turbo_frame: 'navbar', turbo_method: :delete } %>
    <% else %>
      <%= link_to 'Sign up', new_user_registration_path, :class => 'navbar-link btn btn-outline-success rounded-0' %>
      <%= link_to 'Login', new_user_session_path, :class => 'navbar-link btn btn-success rounded-0' %>
    <% end %>
      <%= link_to "Cart", cart_path, class: "btn btn-outline-primary rounded-5 mx-5" %>

</nav>
